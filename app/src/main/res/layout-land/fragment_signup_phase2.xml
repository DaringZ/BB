<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:alpha=".97"
    android:background="@color/colorAccent"
    android:paddingBottom="7dp"
    android:paddingEnd="7dp"
    android:paddingStart="7dp"
    android:paddingTop="7dp"

    tools:context="com.devster.bloodybank.Fragments.SignUpPhases.Portrait.Phase2">

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:theme="@style/AppTheme.WhiteAccent"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:paddingTop="12dp"
                android:text="@string/Personal_info"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Spinner
                        android:id="@+id/spinner_honorific"
                        style="@style/spinnerstyle"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="15dp"
                        android:entries="@array/bloodType"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:windowSoftInputMode="adjustPan">

                    </Spinner>

                    <Spinner
                        android:id="@+id/spinner_BT"
                        style="@style/spinnerstyle"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="15dp"
                        android:entries="@array/honorific"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"
                        android:windowSoftInputMode="adjustPan"

                        >

                    </Spinner>

                    <TextView
                        android:id="@+id/tv_DOB"
                        style="@style/field_style"
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginBottom="15dp"
                        android:textColorHint="@color/colorAccent"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:hint="@string/hint_Birthday" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/PhoneNumber"
                            android:textColor="@color/white"
                            android:textSize="22sp" />

                    </android.support.design.widget.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <com.hbb20.CountryCodePicker

                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_contentColor="@color/white"
                            app:ccp_defaultLanguage="ENGLISH"
                            app:ccp_defaultNameCode="PK" />

                        <EditText
                            android:id="@+id/et_phnNo"
                            style="@style/field_style"
                            android:layout_marginBottom="15dp"
                            android:hint="@string/hint_mobileNumber"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:padding="5dp"
                            android:text="@string/verified"
                            android:textAlignment="center"
                            android:textColor="@color/verify_green"

                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:visibility="gone" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_send"
                        style="?android:attr/animateOnClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/btn_style"
                        android:ems="6"
                        android:text="@string/snd_code"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutPanel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_resend"
                    style="?android:attr/animateOnClick"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/blueGray"
                    android:padding="3dp"
                    android:text="@string/resendCode"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="8"
                    android:hint="@string/code"
                    android:inputType="number"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@color/white"
                    android:textSize="22sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_verify"
                    style="?android:attr/animateOnClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:ems="6"
                    android:padding="3dp"
                    android:text="@string/verifyCode"
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_back"
                    style="?android:attr/animateOnClick"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/btn_back_style"
                    android:ems="6"
                    android:fontFamily="sans-serif-thin"
                    android:padding="10dp"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_proceedToregister"
                    style="?android:attr/animateOnClick"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/btn_back"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/btn_proceed_style"
                    android:ems="6"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/proceed"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
