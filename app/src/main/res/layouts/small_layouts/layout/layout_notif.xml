<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardMaxElevation="3dp"
        android:layout_marginBottom="3dp"
        app:cardPreventCornerOverlap="true"
        android:background="@drawable/cv_notif_style"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout

                android:id="@+id/LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/cv_notif_style"
                android:gravity="center"
                android:padding="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notif_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="68sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_semibold_italic"
                    android:text="A+"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/LL"
                android:paddingTop="15dp"
                android:paddingStart="7dp"
                android:paddingEnd="2dp"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_notifTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/nunito_semibold"

                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/hint_FullName"
                    />
                <TextView
                android:id="@+id/tv_notifnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_semibold"

                android:textColor="@color/colorPrimaryDark"
                android:text="@string/hint_mobileNumber"
                />

            </LinearLayout>

        </RelativeLayout>





    </android.support.v7.widget.CardView>




</RelativeLayout>